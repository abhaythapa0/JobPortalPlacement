<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FBF6FF"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <Button
        android:id="@+id/addJobButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Job" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sojho Talent Company"
        android:textStyle="bold"
        android:textSize="25sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Search Job here..."
        android:paddingHorizontal="10dp"
        android:drawablePadding="15dp"
        android:background="@drawable/et_style"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Job Listing"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginTop="10dp" />

    <!-- Container for dynamic job listings -->
    <LinearLayout
        android:id="@+id/jobListContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>